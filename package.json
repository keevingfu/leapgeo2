{
  "name": "leapgeo2",
  "version": "1.0.0",
  "description": "Leap GEO Platform - Generative Engine Optimization Platform",
  "private": true,
  "type": "module",
  "scripts": {
    "install:frontend": "cd frontend && npm install",
    "install:backend": "cd backend && pip install -r requirements.txt",
    "install:all": "npm run install:frontend && npm run install:backend",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && source venv/bin/activate && python -m uvicorn app.main:app --reload",
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "build": "cd frontend && npm install && npm run build",
    "preview": "cd frontend && npm run preview",
    "type-check": "cd frontend && npm run type-check",
    "lint": "cd frontend && npm run lint",
    "test": "cd frontend && npx playwright test",
    "vercel-build": "cd frontend && npm install && npm run build"
  },
  "workspaces": [
    "frontend"
  ],
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/keevingfu/leapgeo2.git"
  },
  "keywords": [
    "GEO",
    "Generative Engine Optimization",
    "AI",
    "Content Marketing",
    "Citation Tracking"
  ],
  "author": "keevingfu",
  "license": "UNLICENSED",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
